generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  nome        String
  email       String    @unique
  senha       String
  cargo       String    @default("user")
  dataCriacao DateTime  @default(now())
  codigoEmail String?
  codigoExp   DateTime?
  products    Product[]

  @@map("users")
}

model Product {
  id           String   @id @default(cuid())
  nome         String
  tipo         String
  quantidade   Int
  categoria    String
  descricao    String?
  cod_id       String?
  grupo        String?
  classe       String?
  material     String?
  elemento     String?
  natureza     String?
  data         DateTime @default(now())
  status       String   @default("Pendente") // "Pendente", "Aprovado", "Negado"
  justificativa String?
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String
  message   String
  route     String?
  extra     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("logs")
}

model Supplier {
  id          String   @id @default(cuid())
  nome        String
  cnpj        String   @unique
  cep         String?
  rua         String?
  cidade      String?
  estado      String?
  numero      String?
  email       String?
  telefone    String?
  dataCriacao DateTime @default(now())

  @@map("suppliers")
}
