generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  nome        String
  email       String    @unique
  senha       String
  cargo       String    @default("user")
  dataCriacao DateTime  @default(now())
  codigoEmail String?
  codigoExp   DateTime?
  products    Product[]

  @@map("users")
}

model Product {
  id            String   @id @default(cuid())
  nome          String
  tipo          String
  quantidade    Int
  categoria     String
  descricao     String?
  data          DateTime @default(now())
  status        String   @default("Pendente")
  justificativa String?
  userId        String
  classe        String?
  cod_id        String?
  elemento      String?
  grupo         String?
  material      String?
  natureza      String?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String
  message   String
  route     String?
  extra     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("logs")
}
